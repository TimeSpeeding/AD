<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_view_item"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        style="@style/dashboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_disbursement_form"
        android:text="view items"/>

    <Button
        android:id="@+id/btn_disbursement_form"
        android:layout_height="wrap_content"
        style="@style/dashboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_item"
        app:layout_constraintBottom_toTopOf="@id/btn_retrieval_form"
        android:text="view disbursement form"/>


    <Button
        android:id="@+id/btn_retrieval_form"
        style="@style/dashboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_request_history"
        android:text="view retrieval form"/>

    <Button
        android:id="@+id/btn_request_history"
        style="@style/dashboard"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_retrieval_form"
        android:text="view request histories"/>


</androidx.constraintlayout.widget.ConstraintLayout>