<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Group13</title>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="top">
        <div class="header">
            <div class="left">
                Logic University
            </div>
            <div class="right">
                Stationery Store Inventory System
            </div>
        </div>
    </div>

    <div class="container">
        <div class="content">
            @RenderBody()
            <hr />
        </div>
        <div class="footer">
            <p>&copy; @DateTime.Now.Year - Group13 Stationey Store Inventory System</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
